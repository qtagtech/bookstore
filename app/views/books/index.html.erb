<div class="pull-right">
  <%= link_to 'New Book', new_book_path, class: 'btn btn-default' %>
</div>

<h1>Listing Books</h1>
<% @books.each do |book| %>
    <h3><%= link_to book.name, book %></h3>
    <p><% book.description%>
      <% if book.user %>
          <span class="label label-info"><%= book.user.email %></span>
      <% else %>
          <span class="label label-success"> By Admin</span>
      <% end %>
    </p>
<% end %>
<%= will_paginate @books, renderer: BootstrapPagination::Rails %>
